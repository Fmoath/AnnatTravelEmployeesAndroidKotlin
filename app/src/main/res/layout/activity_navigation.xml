<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".views.activities.NavigationActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/im_like"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/navigation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text_h4_m"
                android:layout_marginBottom="@dimen/_15sdp" />

            <TextView
                android:id="@+id/navigation_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text_h5_r"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp" />

            <TextView
                android:id="@+id/navigation_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text_h5_r"
                android:textColor="@color/selector_color_amber_to_grey"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_70sdp" />

            <EditText
                android:id="@+id/navigation_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:inputType="text"
                android:gravity="center"
                android:background="@drawable/shape_rectangle_corner_background_form"
                style="@style/Text_h6_r"
                android:importantForAutofill="no"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"/>

            <Button
                android:id="@+id/navigation_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                style="@style/Button_blue"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp" />

            <TextView
                android:id="@+id/navigation_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text_h6_r"
                android:textColor="@color/selector_color_grey_to_amber"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>

</layout>