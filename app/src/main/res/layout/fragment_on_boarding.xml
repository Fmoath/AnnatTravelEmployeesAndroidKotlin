<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center"
        android:background="@color/white">

        <TextView
            android:id="@+id/on_boarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/Text_h3_m"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/on_boarding_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center|top"
            style="@style/Text_h5_r"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_30sdp"/>

        <ImageView
            android:id="@+id/on_boarding_image"
            android:layout_width="@dimen/_258sdp"
            android:layout_height="@dimen/_172sdp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/image"/>


    </LinearLayout>
</layout>