<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fm.ps.annat.travel.employees">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/application_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnnatTravelEmployees">

        <activity
            android:name=".views.activities.NavigationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="fm.ps.annat.travel.employees" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="NavigationActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="fm.ps.annat.travel.employees" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="SignInActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.OnBoardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="fm.ps.annat.travel.employees" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="OnBoardingActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>